@model Company

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient mt-1 py-3">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Company</h2>
            </div>
        </div>    
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="StreetAddress" type="text" class="form-control border-0 shadow" />
                    <label asp-for="StreetAddress" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="City" type="text" class="form-control border-0 shadow" />
                    <label asp-for="City" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="State" type="text" class="form-control border-0 shadow" />
                    <label asp-for="State" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PostalCode" type="text" class="form-control border-0 shadow" />
                    <label asp-for="PostalCode" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PhoneNumber" type="text" class="form-control border-0 shadow" inputmode="tel" />
                    <label asp-for="PhoneNumber" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary form-control border">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

        @* Add scripts from the partial view, the below is for client side validation *@
        @section Scripts{
            @{
                <partial name="_ValidationScriptsPartial" />
            }
        }
